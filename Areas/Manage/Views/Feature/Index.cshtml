@model List<Feature>
@{
    int counter = 0;
}
<div class="d-flex justify-content-between align-items-center container-fluid" >
    <h1>Features</h1><a asp-action="Create" asp-controller="feature" class="btn btn-primary">create</a>
    </div>
    
<div class="container-fluid">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Icon</th>
                <th scope="col">Actions</th>

            </tr>
        </thead>
        <tbody>
            @foreach (Feature feature in Model)
            {
                counter++;
                <tr>
                    <th scope="row">@counter</th>
                    <td>@feature.Title</td>
                    <td>@feature.Description</td>
                    <td>@feature.Icon</td>
                    <td>
                        <a asp-action="update" asp-controller="feature" asp-route-id="@feature.Id" class="btn btn-success">Update</a>
                        <a asp-action="delete" asp-controller="feature" asp-route-id="@feature.Id" class="btn btn-danger">Delete</a>

                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>